router.get("/", async (req, res) => {
  const posts = await Post.find().sort({ date: -1 });
  res.json(posts);
});

router.post("/", async (req, res) => {
  const { title, content } = req.body;
  const post = new Post({ title, content });
  await post.save();
  res.json(post);
});

export default router;
